<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red"></solid>
        </shape>
</item>
    <item
        android:top="75dp"
        android:left="-20dp"
        android:right="-20dp"
        android:bottom="-50dp">
        <rotate
            android:fromDegrees="1">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"></solid>
            </shape>
        </rotate>
    </item>
    <item
        android:top="-50dp"
        android:left="-20dp"
        android:right="-20dp"
        android:bottom="75dp">
        <rotate
            android:fromDegrees="1">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"></solid>
            </shape>
        </rotate>
    </item>
    <item
        android:top="-50dp"
        android:left="380dp"
        android:right="-20dp"
        android:bottom="-50dp">
        <rotate
            android:fromDegrees="-5">
            <shape android:shape="rectangle">
                <solid android:color="@color/white"></solid>
            </shape>
        </rotate>
    </item>
</layer-list>